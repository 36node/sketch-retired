{
  "name": "@36node/template-service",
  "version": "0.3.5",
  "description": "A service boilerplate with openapi,rest and mongodb.",
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "src",
    ".circleci",
    "Dockerfile",
    "openapi.yml",
    "README.md"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && babel ./src -d ./dist --ignore test.js",
    "format": "prettier --trailing-comma es5 --write",
    "gen:api": "swagen -t koa -s openapi.yml -f ./src",
    "init:db": "babel-node bin/initdb.js",
    "lint": "eslint src",
    "start": "nodemon src/index.js --watch src --exec 'babel-node'",
    "test": "jest --silent"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "yarn format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/babel": "*",
    "@36node/eslint-config": "0.1.0",
    "@36node/swagen": "0.1.2",
    "@commitlint/cli": "6.1.0",
    "@commitlint/config-conventional": "6.1.0",
    "@types/lodash": "4.14.116",
    "husky": "1.0.0-rc.13",
    "jest-cli": "23.3.0",
    "json-schema-faker": "0.5.0-rc15",
    "lint-staged": "7.2.0",
    "mongoose-schema-jsonschema": "1.1.15",
    "nodemon": "1.18.3",
    "prettier": "1.13.7"
  },
  "dependencies": {
    "@koa/cors": "2",
    "dotenv": "6.0.0",
    "koa": "2.5.2",
    "koa-body": "4.0.4",
    "koa-helmet": "4.0.0",
    "koa-jwt": "3.3.2",
    "koa-logger": "3.2.0",
    "koa-tree-router": "0.4.2",
    "lodash": "4.17.10",
    "mongoose": "5.2.14",
    "mongoose-hidden": "1.5.4"
  }
}
