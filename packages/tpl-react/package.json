{
  "name": "@36node/template-react",
  "version": "0.8.31",
  "description": "A react boilerplate for web",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production react-app-rewired build",
    "gen:sdk": "swagen sdk https://api.36node.com/petstore/v0/openapi.yaml ./src/sdk petstore && npm run format",
    "format": "prettier --trailing-comma es5 --write 'src/**/*.js'",
    "lint": "eslint src",
    "release": "standard-version && git push --follow-tags origin master",
    "start": "react-app-rewired start",
    "test": "react-app-rewired test --env=jsdom"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint &&  CI=true npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.3.4",
    "@36node/swagen": "^0.9.5",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "concurrently": "^4.0.1",
    "connect-pause": "^0.1.0",
    "cross-env": "^5.2.0",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.13",
    "jest-styled-components": "^6.2.1",
    "json-server": "^0.14.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.3",
    "react-app-rewire-eslint": "^0.2.3",
    "react-app-rewire-less": "^2.1.2",
    "react-app-rewire-styled-components": "^3.0.2",
    "react-app-rewired": "^1.5.2",
    "react-scripts": "1.1.4",
    "react-test-renderer": "^16.5.2",
    "standard-version": "^4.4.0"
  },
  "dependencies": {
    "@36node/fetch": "^0.4.11",
    "antd": "^3.8.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.9"
  }
}
