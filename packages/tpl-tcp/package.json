{
  "name": "@36node/template-tcp",
  "version": "0.6.50",
  "description": "A module boilerplate for tcp server.",
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "template": "tcp",
  "files": [
    ".circleci",
    "bin",
    "dist",
    "test",
    "typings",
    "README.md",
    "src"
  ],
  "bin": {
    "server": "bin/server.js"
  },
  "config-overrides-path": "../cli/config-overrides",
  "main": "dist/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "sketch build src/{server,index}.js",
    "format": "prettier --trailing-comma es5 --write 'src/**/*.js'",
    "lint": "sketch lint src",
    "release": "standard-version",
    "start": "sketch start | pino-pretty -t 'SYS:yyyy-mm-dd HH:MM:ss'",
    "test": "sketch test --env=node",
    "test:int": "sketch test -c test/jest.config.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && CI=true npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.6.4",
    "@36node/sketch": "^0.15.5",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.12",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "pino-pretty": "^2.5.0",
    "prettier": "^1.18.2",
    "standard-version": "^6.0.1"
  },
  "dependencies": {
    "@36node/whisper": "^0.1.0",
    "dotenv": "^7.0.0",
    "only": "^0.0.2",
    "pino": "^5.11.1"
  },
  "jest": {
    "displayName": "unit",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
