{
  "name": "@36node/redux-cron",
  "version": "0.0.8",
  "description": "An redux libary for do cron job",
  "repository": {
    "url": "36node/sketch",
    "type": "git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "template": "redux-library",
  "files": [
    "bin",
    "dist",
    "typings"
  ],
  "config-overrides-path": "../cli/config-overrides",
  "main": "dist/index.cjs.js",
  "module": "src/index.esm.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "build": "sketch build"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && CI=true NODE_ENV=test npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "xlsx": "^0.14.3"
  },
  "peerDependencies": {
    "redux-saga": "^1.0.2"
  },
  "devDependencies": {
    "@36node/eslint-config": "^0.6.2",
    "@36node/sketch": "^0.13.10",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/jest": "^24.0.12",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "1.17.1",
    "standard-version": "^6.0.1"
  },
  "jest": {
    "displayName": "unit",
    "testMatch": [
      "<rootDir>/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ]
  }
}
